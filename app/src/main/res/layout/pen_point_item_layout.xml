<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="#55ffeb3b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <com.tbt.app.Tools.MyCustomTextView
            android:id="@+id/pen_point_list_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Article Title" />

        <TextView
            android:id="@+id/pen_point_list_article_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Some lines of Articles"
            android:textSize="12sp"
            android:textStyle="normal"/>

        <RelativeLayout android:layout_gravity="right"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView android:id="@+id/pen_point_list_author_img"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_g_icon"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/pen_point_list_author_name"
                android:layout_toLeftOf="@id/pen_point_list_author_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shantanu Banerjee"
                android:layout_centerVertical="true"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="5sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <ImageView
                android:id="@+id/pen_point_list_like_button"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_like_active"
                android:padding="5sp"/>

            <com.tbt.app.Tools.MyCustomTextView
                android:id="@+id/pen_point_list_like_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/pen_point_list_like_button"
                android:layout_marginLeft="5sp"
                android:text="20"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>